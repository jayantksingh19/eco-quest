# Server
PORT=5000
CORS=http://localhost:5173,https://eco-quest-1.onrender.com

# Database & auth
MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/ecoquest
JWT_SECRET=supersecretjwtkey

# OTP & Messaging (optional)
OTP_DEBUG=true
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=5
DEFAULT_PHONE_COUNTRY_CODE=+91

# Email provider configuration
EMAIL_PROVIDER=smtp
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM=ecoquest@example.com

# Twilio (if SMS OTP enabled)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_MESSAGING_SERVICE_SID=MGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_FROM_NUMBER=+10000000000

# SMTP (if email OTP enabled)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=example@gmail.com
SMTP_PASS=app-password
EMAIL_FROM=example@gmail.com