PORT=PORT_NUMBER
MONGO_URI=your_mongodb_uri
CORS=*

# OTP & Messaging configuration
# Keep OTP_DEBUG=true for local development to bypass real SMS/email sends.
OTP_DEBUG=false

# Twilio credentials (provide either MESSAGING_SERVICE_SID or FROM number)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_MESSAGING_SERVICE_SID=
TWILIO_FROM_NUMBER=

# SMTP credentials for password-reset emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# 465 for SSL, 587 for TLS
# 2525 is an alternative port that works with some providers
# Leave blank to use default ports
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=

# Default country code used when users enter a local number without + prefix
DEFAULT_PHONE_COUNTRY_CODE=+91
